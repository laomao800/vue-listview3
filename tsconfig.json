{
  "compilerOptions": {
    "outDir": "dist",
    "target": "es2018",
    "module": "esnext",
    "sourceMap": false,
    "moduleResolution": "node",
    "allowJs": false,
    "strict": true,
    "noUnusedLocals": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "removeComments": false,
    "rootDir": ".",
    "composite": true,
    "useDefineForClassFields": true,
    "jsx": "preserve",
    "jsxImportSource": "vue",
    "isolatedModules": true,
    "lib": ["esnext", "dom"],
    "skipLibCheck": true,
    "types": [
      "element-plus/global",
      "unplugin-vue-macros/macros-global",
      "vitest/globals",
      "vite/client"
    ],
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "~/*": ["*"]
    }
  },
  "references": [{ "path": "./tsconfig.node.json" }]
}
