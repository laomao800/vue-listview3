{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "composite": true,
    "jsx": "preserve",
    "lib": ["ES2018", "DOM", "DOM.Iterable"],
    "types": ["unplugin-vue-macros/macros-global"]
  },
  "include": [
    // "vite.config.*",
    "env.d.ts",
    "src/**/*.ts",
    "src/**/*.d.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "example/**/*",
    "tests/**/*",
    "public/mockServiceWorker.js"
  ],
  "exclude": ["node_modules", "src/dist"]
}
